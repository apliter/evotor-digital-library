<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.apliter.evotor_digital_library">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="ru.evotor.permission.receipt.printExtra.SET" />
    <uses-permission android:name="ru.evotor.devices.SCANNER_RECEIVER" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_local_library"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/EvotorTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data android:name="app_uuid" android:value="209def12-02e1-4520-89e5-083da987f7ce"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.EVOTOR" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="ru.evotor.launcher.BACKGROUND_COLOR"
                android:value="@color/actionButtonColorOrange" />
        </activity>

    </application>

</manifest>